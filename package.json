{
  "scripts": {
    "test": "jest",
    "test-watch": "jest --watch",
    "start": "node ./5-nasa-project/server/src/server.js",
    "server": "nodemon ./5-nasa-project/server/src/server.js",
    "client": "npm run start --prefix 5-nasa-project/client",
    "cluster": "pm2 start ./5-nasa-project/server/src/server.js -i max",
    "deploy": "npm run build --prefix 5-nasa-project/client && npm run start",
    "deploy-cluster": "npm run build --prefix 5-nasa-project/client && npm run cluster",
    "watch": "npm run server & npm run client",
    "test-app": "npm test --prefix 5-nasa-project/server && npm test --prefix 5-nasa-project/client"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "express": "^4.21.2",
    "hbs": "^4.2.0",
    "helmet": "^8.1.0",
    "lodash": "^4.17.21",
    "mongoose": "^8.16.4",
    "morgan": "^1.10.0",
    "pm2": "^6.0.8"
  },
  "devDependencies": {
    "supertest": "^7.1.3"
  }
}
